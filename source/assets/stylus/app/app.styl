html, body {
    width: 100%;
    height: 100%
}

body {
    margin: 0;
    padding: 0;
    background-color: $c-white;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

*, *:before, *:after {
    box-sizing: border-box;
    -webkit-tap-highlight-color: transparent;
    -webkit-font-smoothing: antialiased;
}

a, a:visited, a:active {
    text-decoration: none;
    color: inherit;
}

h1, h2, h3, h4, h5, h6, p, figure {
    margin: 0;
}

ul, ol, li {
    list-style-type: none;
    padding: 0;
    margin: 0;
}

img, picture, figure, video {
    display: block;
    user-select: none;
}

button {
    border: none;
    margin: 0;
    padding: 0;
    width: auto;
    overflow: visible;
    color: inherit;
    font: inherit;
    appearance: none;
    background: none;
    border-radius: 0;
    cursor: pointer;

    &:focus {
        outline: none;
    }
}

.main {
    max-width: 100vw;
    background-color: $c-white;
    display: flex;
    flex-direction: column;

    &__wrap {
        display: flex;
        flex-flow: nowrap;
        flex-direction: row;
    }
}

.section {
    width: 100%;
    height: auto;
    overflow: hidden;
    position: relative;
}

@media screen and (max-width: $desktop-breakpoint) {
    .main {
        &__wrap {
            flex-direction: column;
        }
    }
}
