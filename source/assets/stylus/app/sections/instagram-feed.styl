.instagram-feed {
    order: 1;
    max-width: 50vw;
    height: 60vh;
    background: black;

    &__image {
        height: 100%;
        width: 100%;
        background: url('/public/images/instagram/instagram.jpg') center 45% no-repeat;
        background-size: cover;
        animation: scaleIn .33s forwards;
    }

    @media screen and (max-width: $desktop-breakpoint) {
        order: 2;
        max-width: 100vw;
        height: 55vh;
    }
}
