.explained {
    max-width: 50vw;
    height: 40vh;
    background: #e5dcd8;
    background: url('/public/images/explained/track.jpg') center center no-repeat;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0 0 0 40px;

    &__article {
        position: relative;
        height: 50%;
        margin-top: auto;
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    &__title {
        color: $c-blue;
        margin: 0 0 15px;
        max-width: 35vw;
    }

    &__note {
        color: $c-blue;
    }

    &__footer {
        width: 100%;
        // height: 50%;
        margin: 0 0 40px;
    }

    &__list {
        color: $c-blue;
        display: flex;
        flex-direction: row;
        width: 100%;
    }

    &__item {
        display: inline-block;
        color: $c-blue;
        width: 70%;

        &:first-child {
            width: 30%;
        }
    }

    @media screen and (max-width: $desktop-breakpoint) {
        max-width: 100vw;
        padding: 0 20px;
        height: 40vh;

        &__article {
            justify-content: flex-start;
        }

        &__title {
            max-width: 100vw;
        }
    }

    @media screen and (max-width: $mobile-breakpoint) {
        height: 30vh;
    }
}
