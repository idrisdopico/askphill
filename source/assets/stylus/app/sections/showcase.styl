.showcase {
    max-width: 50vw;
    height: 60vh;
    margin: -20vh 0 0;
    background: rgb(140, 185, 203);

    &__image {
        height: 100%;
        width: 100%;
        background: url('/public/images/showcase/slide.jpg') center 78% no-repeat;
        background-size: cover;
        opacity: 0;
        animation: scaleIn .33s forwards .25s;
    }

    @media screen and (max-width: $desktop-breakpoint) {
        max-width: 100vw;
        height: 55vh;
        margin: 0;
    }
}
